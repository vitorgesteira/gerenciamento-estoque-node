<main class="container">
  <div class="bg-body-tertiary p-5 rounded">
  <div class="container col-xxl-8 px-4 py-5">
    <div class="row flex-lg-row-reverse align-items-center g-5 py-5">
        <h1 class="display-5 fw-bold text-body-emphasis lh-1 mb-3">Detalhes do produto (<%= produtos.nome_produto%>)</h1>
        <ul class="list-group list-group-flush">
          <!-- <li class="list-group-item">Nome: <%= produtos.nome_produto%></li> -->
          <li class="list-group-item">Quantidade em estoque: <%= produtos.qtd%></li>
          <li class="list-group-item">Valor: R$ <%= produtos.valor%></li>
          <li class="list-group-item">Categoria: <%= produtos.nome_categoria%></li>
        </ul>
    </div>
  </div>
  </div>
</main>


