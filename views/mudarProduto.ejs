<main class="container"> 
  <div class="bg-body-tertiary p-5 rounded">
    <div class="container col-xxl-8 px-4 py-5">
      <div class="row flex-lg-row-reverse align-items-center g-5 py-5">
        <%     if(typeof produtos != 'undefined') { %>
                
          <h1 class="display-5 fw-bold text-body-emphasis lh-1 mb-3">Mudar produto (<%= produtos.nome_produto %>)</h1>

          <form id='mudarForm'>
            <div class="mb-3">
              <label for="nome_produto" class="form-label">Nome do produto</label>
              <input type="text" class="form-control" id="nome_produto" value="<%= produtos.nome_produto %>">
            </div>
            <div class="mb-3">
              <label for="qtd" class="form-label">Quantidade em estoque</label>
              <input type="number" class="form-control" id="qtd" value="<%= produtos.qtd %>">
            </div>
            <div class="mb-3">
              <label for="valor" class="form-label">Valor</label>
              <input type="number" step="0.01" class="form-control" id="valor" value="<%= produtos.valor %>">
            </div>
            <div class="mb-3">
              <label for="nome_categoria" class="form-label">Categoria</label>
              <input type="text" class="form-control" id="nome_categoria" value="<%= produtos.nome_categoria %>">
            </div>
            <button type="submit" class="btn btn-primary" onclick="getAxios()">Confirmar</button>
            <!-- '/produtos/<%= produtos.id%>' -->
          </form>
